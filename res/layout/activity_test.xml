<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.machinetribe.christinetzeng.edpsych.TestActivity"
    android:weightSum="100"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/timerLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:orientation="vertical"
        android:background="#d4d3c8">

        <TextView
            android:id="@+id/timerTextView2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/promptLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:orientation="vertical"
        android:background="#000000"
        android:layout_below="@id/timerLayout2">

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/promptGridView2"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="130dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/solutionLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:orientation="vertical"
        android:background="#000000"
        android:layout_below="@id/promptLayout2">

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/solutionGridView2"
            android:numColumns="4"
            android:gravity="center"
            android:columnWidth="100dp"
            android:stretchMode="columnWidth"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:verticalSpacing="3dp"
            android:horizontalSpacing="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </GridView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="vertical"
        android:background="#000000"
        android:layout_below="@+id/solutionLayout2">

        <Button
            android:id="@+id/nextBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="Next" />

    </LinearLayout>

</LinearLayout>
